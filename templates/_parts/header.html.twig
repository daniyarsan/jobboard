<!-- header -->
<header id="header" class="clearfix">
    <!-- navbar -->
    <nav class="navbar navbar-default navbar-expand-lg">
        <div class="container">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"><i class="fa fa-align-justify"></i></span>
            </button>
            <a class="navbar-brand" href="{{ path('frontend_main_index') }}"><img class="img-fluid" src="{{ asset('frontend/images/logo.png') }}" alt="Logo"></a>

            {{ menuGenerator.mainHeaderMenu()|raw }}

            <!-- nav-right -->
            <div class="nav-right">
                <ul class="sign-in">
                    <li><i class="fa fa-user"></i></li>
                    {% if not is_granted('IS_AUTHENTICATED_FULLY') %}
                        <li><a href="{{ path('security_login') }}">{{ 'Sign In' | trans }}</a></li>
                        |
                        <li><a href="{{ path('security_registration') }}">{{ 'Employers' | trans }}</a></li>
                    {% else %}
                        {% if is_granted('ROLE_COMPANY') %}
                            <li><a href="{{ path('my_company_settings') }}">My Account</a></li>
                        {% else %}
                            <li><a href="{{ path('my_profile_settings') }}">My Account</a></li>
                        {% endif %}
                    {% endif %}
                </ul><!-- sign-in -->

                <a href="{{ path('frontend_main_apply') }}" class="btn">{{ 'Apply' | trans }}</a>
            </div>
            <!-- nav-right -->
        </div><!-- container -->
    </nav><!-- navbar -->
</header><!-- header -->