{% extends 'admin/admin-base.html.twig' %}

{% block title %}Pages List{% endblock %}

{% block content %}
    {% import 'admin/form/dialog.html.twig' as dialogs %}
    {% import 'admin/_parts/helper.html.twig' as helper %}
    {% set pagesCount = pages.getTotalItemCount %}

    <div class="row">
        <div class="col-lg-12">
            <!-- USER DATA-->
            <div class="user-data">
                <h3 class="title-3 m-b-30">Pages list - {{ pagesCount }}</h3>
                <div class="table-data__tool filters m-b-45">
                    <div class="table-data__tool-left">
                        <div class="btn-group">
                            <button type="button" class="btn btn-secondary bulk-action-dropdown" data-toggle="dropdown" disabled="disabled">
                                {% trans %}Choose an Action{% endtrans %} <span class="fa fa-caret-down"></span>
                            </button>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" data-toggle="modal" href="#" onclick="pageBulkAction('activate');">Activate</a>
                                <a class="dropdown-item" data-toggle="modal" href="#" onclick="pageBulkAction('disable');">Deactivate</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" data-toggle="modal" href="#static-pages-delete-bulk">Delete</a>
                            </div>
                        </div>
                        {{ dialogs.confirm('static-pages-delete-bulk', 'Confirmation', 'The selected pages will be removed permanently. Are you sure?', "pageBulkAction('remove')", '') }}
                    </div>
                    <div class="table-data__tool-right">
                        <a href="{{ path('admin_page_create') }}" class="au-btn au-btn-icon au-btn--green au-btn--small"><i class="zmdi zmdi-plus"></i>Add
                            Page</a>
                    </div>
                </div>

                <div class="table-data__tool p-r-40 p-l-40">
                    {{ knp_pagination_render(pages) }}
                </div>

                <div class="table-responsive table-data">
                    <form method="post" action="{{ path('admin_page_bulk') }}" id="page-bulk-form">
                        {{ form_widget(bulk_action_form._token) }}
                        <input type="hidden" name="action" value=""/>
                        <input type="hidden" name="return_url" value="{{ path('admin_page_index') }}{{ query_string() }}"/>
                        <table class="table table-data2">
                            <thead>
                            <tr>
                                <td>
                                    <input type="checkbox" class="check-all-items"/>
                                </td>
                                <td>
                                    {{ knp_pagination_sortable(pages, 'Page Name', 'p.name') }}
                                    {% if pages.isSorted('p.name') %}
                                        <span class="fas fa-sort-amount{% if pages.getParams.direction == 'desc' %}-desc{% else %}-asc{% endif %}"></span>
                                    {% endif %}
                                </td>
                                <td>URL</td>
                                <td>
                                    {{ knp_pagination_sortable(pages, 'Status', 'p.status') }}
                                    {% if pages.isSorted('p.status') %}
                                        <span class="fas fa-sort-amount{% if pages.getParams.direction == 'desc' %}-desc{% else %}-asc{% endif %}"></span>
                                    {% endif %}
                                </td>
                                <td>Action</td>
                            </tr>
                            </thead>

                            <tbody>
                            {% for page in pages %}
                                <tr>
                                    <td><input type="checkbox" class="check-item" name="pages[{{ page.id }}]"/></td>
                                    <td>{{ page.name }}</td>
                                    <td>{{ page.url }}</td>
                                    <td>
                                        {% if page.status %}
                                            <span class="status--process">Active</span>
                                        {% else %}
                                            <span class="status--denied">Not Active</span>
                                        {% endif %}
                                    </td>

                                    <td>
                                        <div class="dropdown">
                                            <button class="dropdown-toggle btn btn-outline-secondary btn-sm" type="button" data-toggle="dropdown">
                                                Action
                                            </button>
                                            <div class="dropdown-menu">
                                                {% if page.status %}
                                                    <a target="_blank" href="{{ helper.pageUrl(page) }}" class="dropdown-item">View</a>
                                                {% endif %}
                                                <a class="dropdown-item" href="{{ path('admin_page_edit', {'id': page.id, 'return_url': path('admin_page_index') ~ query_string()}) }}">Edit</a>
                                                {% if page.status == 1 %}
                                                    <a class="dropdown-item" href="{{ path('admin_page_set', {'action': 'disable', 'id': page.id, 'return_url': path('admin_page_index') ~ query_string()}) }}">Deactivate</a>
                                                {% else %}
                                                    <a class="dropdown-item" href="{{ path('admin_page_set', {'action': 'activate', 'id': page.id, 'return_url': path('admin_page_index') ~ query_string()}) }}">Activate</a>
                                                {% endif %}
                                                <div class="dropdown-divider"></div>
                                                <a data-toggle="modal" href="#static-page-delete-{{ page.id }}" class="dropdown-item">Delete</a>
                                            </div>
                                        </div>
                                        {{ dialogs.confirm('static-page-delete-' ~ page.id, 'Confirmation', 'The selected page will be removed permanently. Are you sure?', '', path('admin_page_set', {id: page.id, action: 'remove'})) }}
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </form>
                </div>

                <div class="table-data__tool p-r-40 p-l-40">
                    {{ knp_pagination_render(pages) }}
                </div>
            </div>
            <!-- END USER DATA-->
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        function pageBulkAction(action) {
            console.log(action)
            var form = $("#page-bulk-form");
            form.find("input[name='action']").val(action);
            form.submit();
        }
    </script>
{% endblock %}