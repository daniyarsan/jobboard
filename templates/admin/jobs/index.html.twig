{% extends 'admin/admin-base.html.twig' %}

{% block title %}Main Admin{% endblock %}

{% block content %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Dashboard
            <small>Control panel</small>
        </h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="breadcrumb-item active">Dashboard</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-12">
                <div class="box">
                    <div class="box-header with-border">
                        <h3 class="box-title">Companies List</h3>
                        <div class="box-tools">
                            {{ form_start(filterForm, {'name': 'filter-companies-form'}) }}
                            <div class="input-group input-group-sm">
                                {{ form_widget(filterForm.keyword) }}
                                <div class="input-group-btn">
                                    <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                                </div>
                            </div>
                            {{ form_end(filterForm) }}

                        </div>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body no-padding">
                        <table class="table table-responsive">
                            <tbody>
                            <tr>
                                <th>Name</th>
                                <th>Country</th>
                                <th>Categories</th>
                                <th>Status</th>
                                <th>Date</th>
                                <th></th>
                            </tr>
                            {% for job in jobs %}
                                <tr>
                                    <td><a href="{{ path('admin_jobs_details', {id : job.id}) }}">{{ job.name }}</a></td>
                                    <td>{{ job.country }}</td>
                                    <td>{{ job.categories|join(', ') }}</td>
                                    <td>{% if job.isPublished %}<span class="label label-success">Active</span>{% else %}<span class="label label-default">Not Active</span>{% endif %}</td>
                                    <td><span class="text-muted"><i class="fa fa-clock-o"></i> {{ job.created|date('y/m/d') }}</span></td>
                                    <td>
                                        <div class="dropdown">
                                            <button class="dropdown-toggle" type="button" data-toggle="dropdown">Manage</button>
                                            <div class="dropdown-menu">
                                                <a class="dropdown-item" href="#"><i class="fa fa-pencil"></i> Edit</a>
                                                <a class="dropdown-item" href="#"><i class="fa fa-trash-o"></i> Delete</a>
                                                <div class="dropdown-divider"></div>
                                                <a class="dropdown-item" href="#"><i class="fa fa-codepen"></i> Activate</a>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer clearfix">
                        <ul class="pagination pagination-sm pull-right">
                            {{ knp_pagination_render(jobs) }}
                        </ul>
                    </div>
                </div>
                <!-- /.box -->
            </div>
        </div>
    </section>
    <!-- /.content -->
</div>
{% endblock %}
