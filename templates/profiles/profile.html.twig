<div class="candidate">
    <div class="thumb">
        <a href="{{ path('profile_details', {'id' : profile.getId()}) }}">
            <img src="{{ vich_uploader_asset(profile, 'avatarImage') }}" class="img-fluid" alt="">
        </a>
    </div>
    <div class="body">
        <div class="content">
            <h4><a href="{{ path('profile_details', {id: profile.getId() }) }}">{{ profile.getFullName() }}</a></h4>
