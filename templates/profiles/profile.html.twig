                <span class="location"><a href="#"><i data-feather="map-pin"></i>{{ profile.getCountry() }}</a></span>
            </div>
        </div>
        <div class="button-area">
            <a href="{{ path('profile_details', {'id' : profile.getId()}) }}">View Resume</a>
        </div>
    </div>
