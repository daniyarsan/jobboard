<div class="item-wrapper">
    <div class="job">
        <div class="item-title">
            <h3>
                <a href="{{ path('company_details', {id: company.getId() }) }}">{{ company.getName() }}</a>
            </h3>

            <div class="item-title-image">
                <img src="" alt="{{ company.getName() }}">

                {% if company.isVerified() %}
                    <div class="verified">
                        <i class="fa fa-check"></i>
                    </div><!-- /.verified -->
                {% endif %}
            </div>
        </div><!-- /.item-title -->

        <ul class="item-meta">
            <li class="item-meta-count">
                <span>
                    {% set count_jobs = jobRepository.getCompanyCount(company) %}

                    {% transchoice count_jobs %}
                        {0} No posted job|{1} %count_jobs% job|]1,Inf] %count_jobs% posted jobs
                    {% endtranschoice %}
                </span>
            </li>

            {% if company.getCountry() %}
                <li>
                    <i class="fa fa-map-marker"></i> <span>{{ company.getCountry() }}</span>
                </li>
            {% endif %}
        </ul><!-- /.item-meta -->

        {% if company.description %}
            <div class="item-description">
                {{ company.description|striptags[:200] ~ '...' }}
            </div><!-- /.item-description -->
        {% endif %}
    </div><!-- /.job -->
</div><!-- /.item-wrapper -->