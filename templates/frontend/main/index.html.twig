{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <div class="banner-job">
        <div class="banner-overlay"></div>
        <div class="container text-center">
            <h1 class="title">The Easiest Way to Get Your DREAM Job</h1>
            <h3>We offer 12000 jobs vacation right now</h3>

            <div class="banner-form banner-form-full job-list-form">
                {{ render(controller('App\\Controller\\Providers\\SearchProvider:searchBar', {'request' : app.request})) }}
            </div><!-- banner-form -->

            <ul class="banner-socail list-inline">
                <li><a href="#" title="Facebook"><i class="fa fa-facebook"></i></a></li>
                <li><a href="#" title="Twitter"><i class="fa fa-twitter"></i></a></li>
                <li><a href="#" title="Google Plus"><i class="fa fa-google-plus"></i></a></li>
                <li><a href="#" title="Youtube"><i class="fa fa-youtube"></i></a></li>
            </ul><!-- banner-socail -->
        </div><!-- container -->
    </div><!-- banner-section -->

    <div class="page">
        <div class="container">
            <div class="section category-items job-category-items  text-center">
                {% include 'frontend/main/_disciplines.html.twig' %}
            </div><!-- category ad -->

            <div class="section latest-jobs-ads">
                <div class="section-title tab-manu">
                    <h4>{{ 'Latest Jobs' | trans }}</h4>

                    <!-- Nav tabs -->
                    <ul class="nav nav-tabs" role="tablist">
                        <li role="presentation"><a class="active" href="#recent-jobs" data-toggle="tab">{{ 'Recent Jobs' | trans }}</a></li>
                        <li role="presentation"><a href="#popular-jobs" data-toggle="tab">{{ 'Popular Jobs' | trans }}</a></li>
                    </ul>
                </div>

                <div class="tab-content">
                    <div role="tabpanel" class="tab-pane fade in active show" id="recent-jobs">
                        {% for job in recentJobs %}
                            {% include 'frontend/main/_job.html.twig' %}
                        {% endfor %}
                    </div><!-- tab-pane -->
                    <div role="tabpanel" class="tab-pane fade in" id="popular-jobs">
                        {% for job in recentJobs %}
                            {% include 'frontend/main/_job.html.twig' %}
                        {% endfor %}
                    </div><!-- tab-pane -->
                </div><!-- tab-content -->
            </div><!-- trending ads -->

            <div class="section cta cta-two text-center">
                <div class="row">
                    <div class="col-md-4">
                        <div class="single-cta">
                            <div class="cta-icon icon-jobs">
                                <img src="images/icon/31.png" alt="Icon" class="img-fluid">
                            </div><!-- cta-icon -->
                            <h3>{{ totalJobsCount }}</h3>
                            <h4>{{ 'Live Jobs' | trans }}</h4>
                            <p>All states are included</p>
                        </div>
                    </div><!-- single-cta -->

                    <div class="col-md-4">
                        <div class="single-cta">
                            <!-- cta-icon -->
                            <div class="cta-icon icon-company">
                                <img src="images/icon/32.png" alt="Icon" class="img-fluid">
                            </div><!-- cta-icon -->
                            <h3>20</h3>
                            <h4>{{ 'Agencies' | trans }}</h4>
                            <p>Unlimited opportunities</p>
                        </div>
                    </div><!-- single-cta -->

                    <div class="col-md-4">
                        <div class="single-cta">
                            <div class="cta-icon icon-candidate">
                                <img src="images/icon/33.png" alt="Icon" class="img-fluid">
                            </div><!-- cta-icon -->
                            <h3>123, 000</h3>
                            <h4>Successful Travelers</h4>
                            <p>Next step its up to you. Go and Apply</p>
                        </div>
                    </div><!-- single-cta -->
                </div><!-- row -->
            </div><!-- cta -->

        </div><!-- conainer -->
    </div><!-- page -->


{% endblock %}
