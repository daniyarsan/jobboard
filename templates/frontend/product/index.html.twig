{% extends 'base-index.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}

{% block body %}
    <!-- Breadcrumb -->
    <div class="alice-bg padding-top-70 padding-bottom-70">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div class="breadcrumb-area">
                        <h1>Pricing Plan</h1>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="#">Home</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Pricing Plan</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Breadcrumb End -->

    <!-- How It Work -->
    <div class="alice-bg section-padding-bottom">
        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="white-bg others-block">
                        <div class="pricing-plan-block padding-top-60 padding-bottom-90">
                            <div class="row justify-content-center">
                                <div class="col-lg-8">
                                    <div class="pricing-controller">
                                        <span class="duration duration-month active">Monthly</span>
                                        <div class="switch-wrap"><span class="price-switch"></span></div>
                                        <span class="duration duration-year">Annually <span>20% off</span></span>
                                    </div>
                                    <div class="package-wrapper">
                                        {% for product in products %}
                                            <div class="package free">
                                                <div class="package-header">
                                                    <h5 class="cost">{{ product.price }}<span>/Month</span></h5>
                                                    <span class="title">{{ product.title }}</span>
                                                </div>
                                                <div class="package-features">
                                                    {{ product.description }}
                                                    <a href="{{ path('checkout_checkout', {id : product.id}) }}" class="button">Buy Now</a>
                                                </div>
                                            </div>
                                        {% endfor %}
                                    </div>
                                    <div class="package-wrapper">
                                        <div class="package free">
                                            <div class="package-header">
                                                <h5 class="cost">$00<span>/Month</span></h5>
                                                <span class="title">Free Trail</span>
                                            </div>
                                            <div class="package-features">
                                                <ul>
                                                    <li class="active">Unlimited Reservations</li>
                                                    <li class="active">2 Clients and Products</li>
                                                    <li class="active">5Gb of Storage</li>
                                                    <li class="active">Housekeeping Status</li>
                                                    <li>Data Security and Backups</li>
                                                    <li>Web Booking Widget</li>
                                                    <li>Highlighted in Search Results</li>
                                                </ul>
                                                <a href="#" class="button">Buy Now</a>
                                            </div>
                                        </div>
                                        <div class="package professional">
                                            <div class="package-header">
                                                <h5 class="cost monthly-rate">$29<span>/Month</span></h5>
                                                <h5 class="cost yearly-rate hidden">$14<span>/Month</span></h5>
                                                <span class="title">Professional</span>
                                            </div>
                                            <div class="package-features">
                                                <ul>
                                                    <li class="active">Unlimited Reservations</li>
                                                    <li class="active">2 Clients and Products</li>
                                                    <li class="active">5Gb of Storage</li>
                                                    <li class="active">Housekeeping Status</li>
                                                    <li class="active">Data Security and Backups</li>
                                                    <li class="active">Web Booking Widget</li>
                                                    <li class="active">Highlighted in Search Results</li>
                                                </ul>
                                                <a href="#" class="button">Buy Now</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- How It Work End -->
{% endblock %}
