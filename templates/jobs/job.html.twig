<div class="job-list">
    <div class="thumb">
        <a href="#">
            <img src="images/job/company-logo-8.png" class="img-fluid" alt="">
        </a>
    </div>
    <div class="body">
        <div class="content">
            <h4><a href="{{ path('job_details', {'id' : job.id}) }}">{{ job.name }} </a></h4>
            <div class="info">
                <span class="company"><a href="#"><i data-feather="briefcase"></i>{{ job.getCategories()|join('/') }}</a></span>
                <span class="office-location"><a href="#"><i data-feather="map-pin"></i>{{ job.getCountry() }}</a></span>
                <span class="job-type temporary"><a href="#"><i data-feather="clock"></i>Temporary</a></span>
            </div>
        </div>
        <div class="more">
            <div class="buttons">
                <a href="#" class="button">Apply Now</a>
                <a href="#" class="favourite"><i data-feather="heart"></i></a>
            </div>
            <p class="deadline">Posted: {{ job.getCreated()|date("F jS") }}</p>
        </div>
    </div>
</div>


