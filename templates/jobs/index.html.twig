{% extends 'sidebar.html.twig' %}

{% block title %}{% endblock %}

{% block body_above %}
    <div class="widget widget-filter-large">
        {{ form_start(filterKeyword, {'name': 'filter-jobs-keyword-form'}) }}
        {{ form_widget(filterKeyword) }}
        {{ form_end(filterKeyword) }}
    </div><!-- /.widget-filter-large -->
{% endblock %}

{% block sidebar %}
    <div class="widget widget-filter">
        <h2>{{ 'Filter Jobs'|trans }}</h2>
        {{ form_start(filter, {'name': 'filter-jobs-form'}) }}
        {{ form_widget(filter) }}
        {{ form_end(filter) }}
    </div><!-- /.widget-filter -->

{% endblock %}

{% block content %}
    {% if jobs|length %}
        <div class="page-title">
            <h2>
                {% set count = jobs.getTotalItemCount %}
                {% transchoice count %}
                    {0} %count% jobs matching query|{1} %count% job matching query|]1,Inf[%count% jobs matching query
                {% endtranschoice %}
            </h2>

            {# TODO: Create save search opportuntiy #}

            <a href="#">{{ 'Save Search Query'|trans }}</a>
        </div><!-- /.page-title -->

        <div class="jobs">
            {% for job in jobs %}
                {% include 'jobs/job.html.twig' %}
            {% endfor %}
        </div><!-- /.jobs -->

        <div class="navigation text-center">
            {{ knp_pagination_render(jobs) }}
        </div>
    {% else %}
        No jobs for this request
    {% endif %}
{% endblock %}
