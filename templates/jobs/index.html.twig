{% extends 'sidebar.html.twig' %}

{% block title %}{% endblock %}

{% block sidebar %}
    <div class="sidebar mt-5 mt-lg-0">
        <div class="single-item mb-4">
            <h4 class="mb-4">Filter Jobs</h4>
            {{ form_start(filter, {'name': 'filter-jobs-form'}) }}
            {{ form_widget(filter) }}
            {{ form_end(filter) }}
        </div>
    </div>
{% endblock %}

{% block content %}

    <div class="main-content">
        <div class="single-content1">
            <h3>
                {% set count = jobs.getTotalItemCount %}
                {% transchoice count %}
                    {0} %count% jobs matching query|{1} %count% job matching query|]1,Inf[%count% jobs matching query
                {% endtranschoice %}
            </h3>

            {% if jobs|length %}
                {% for job in jobs %}
                    {% include 'jobs/job.html.twig' %}
                {% endfor %}
                {{ knp_pagination_render(jobs) }}
            {% else %}
                No jobs for this request
            {% endif %}
        </div>
    </div>
    <div class="more-job-btn mt-5 text-center">
        <a href="#" class="template-btn">More</a>
    </div>
{% endblock %}
