{% extends 'base.html.twig' %}

{% block title %}Hello {% endblock %}

{% block body %}
    <div class="col-md-12">
        {% if jobs|length > 0 %}
            <table>
                {% for job in jobs %}
                    <tr>
                        <td>{{ job.id }}</td>
                        <td>{{ job.name }}</td>
                        <td>{{ job.location }}</td>
                    </tr>
                {% endfor %}
            </table>
            {{ knp_pagination_render(jobs) }}
        {% else %}
            no jobs available
        {% endif %}
    </div>
{% endblock %}
